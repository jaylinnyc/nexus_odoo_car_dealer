<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="appointment_vehicle_show_case" inherit_id="appointment.appointment_meeting_user">
        <xpath expr="//div[hasclass('mt-3')][hasclass('pt-3')][hasclass('border-top')]" position="after">
            <div class="mt-3 pt-3 border-top">
                 <small class="text-uppercase text-muted">Vehicle Details</small>
                <div class="d-flex py-1 px-0 bg-transparent o-cc1-text border-0" t-else="">
                    <i class="fa fa-car fa-fw me-2 mt-1 text-muted"/>
                    <span class="o_not_editable"><t t-esc="product_name"/></span>
                </div>
                <div class="d-flex py-1 px-0 bg-transparent o-cc1-text border-0" t-else="">
                    <i class="fa fa-money fa-fw me-2 mt-1 text-muted"/>
                    <span class="o_not_editable">$<t t-esc="product_price"/></span>
                </div>
            </div>
        </xpath>    
    </template>
</odoo>
