<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="contact_form_template" name="Reservation Contact Form">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <h4>Car Reservation Contact Details</h4>
                    <div class="row">
                        <div class="col-lg-8">

                            <t t-if="error and error.get('general')">
                                <div class="alert alert-danger" role="alert">
                                    <t t-esc="error.get('general')"/>
                                </div>
                            </t>

                            <form action="/reservation/create_contact" method="POST">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="product_id" t-att-value="product_id"/>

                                <div class="form-group row mb-3">
                                    <label for="partner_name" class="col-sm-3 col-form-label">Full Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" name="partner_name" id="partner_name" class="form-control"
                                            required="required" t-att-value="partner.get('partner_name')"/>
                                    </div>
                                </div>

                                <div class="form-group row mb-3">
                                    <label for="email" class="col-sm-3 col-form-label">Email</label>
                                    <div class="col-sm-9">
                                        <input type="email" name="email" id="email" class="form-control"
                                            required="required" t-att-value="partner.get('email')"/>
                                    </div>
                                </div>

                                <div class="form-group row mb-3">
                                    <label for="phone" class="col-sm-3 col-form-label">Phone</label>
                                    <div class="col-sm-9">
                                        <input type="tel" name="phone" id="phone" class="form-control"
                                            t-att-value="partner.get('phone')"/>
                                    </div>
                                </div>

                                <div class="form-group row mb-3">
                                    <label for="country_id" class="col-sm-3 col-form-label">Country</label>
                                    <div class="col-sm-9">
                                        <select name="country_id" id="country_id" class="form-control">
                                            <option value="">Select Country</option>
                                            <t t-foreach="countries" t-as="country">
                                                <option t-att-value="country.id"
                                                        t-att-selected="partner.get('country_id') and int(partner.get('country_id')) == country.id">
                                                    <t t-esc="country.name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>

                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary">Proceed to Payment</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>