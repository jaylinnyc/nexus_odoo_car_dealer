<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add car fields to product template form view -->
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="make" invisible="categ_id.name != 'Vehicles'"/>
                <field name="model" invisible="categ_id.name != 'Vehicles'"/>
                <field name="year" invisible="categ_id.name != 'Vehicles'"/>
                <field name="vin" invisible="categ_id.name != 'Vehicles'"/>
                <field name="mileage" invisible="categ_id.name != 'Vehicles'"/>
            </field>
        </field>
    </record>

    <!-- Add car fields to product template tree view (list) -->
    <record id="view_product_template_tree_inherit" model="ir.ui.view">
        <field name="name">product.template.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="make" column_invisible="categ_id.name != 'Vehicles'"/>
                <field name="model" column_invisible="categ_id.name != 'Vehicles'"/>
                <field name="year" column_invisible="categ_id.name != 'Vehicles'"/>
                <field name="vin" column_invisible="categ_id.name != 'Vehicles'"/>
                <field name="mileage" column_invisible="categ_id.name != 'Vehicles'"/>
            </field>
        </field>
    </record>
</odoo>