<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add car fields to product template form view -->
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="detailed_type" position="after">
                <field name="make" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
                <field name="model" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
                <field name="year" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
                <field name="vin" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
                <field name="mileage" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
            </field>
        </field>
    </record>

    <!-- Add car fields to product template tree view (list) -->
    <record id="view_product_template_tree_inherit" model="ir.ui.view">
        <field name="name">product.template.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="make" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
                <field name="model" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
                <field name="year" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
                <field name="vin" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
                <field name="mileage" attrs="{'invisible': [('categ_id', '!=', ref('custom_car_fields.category_vehicles'))]}"/>
            </field>
        </field>
    </record>
</odoo>