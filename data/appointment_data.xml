<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="reservation_product_xmlid" model="product.template">
        <field name="name">Vehicle Reservation</field>
        <field name="type">service</field>
        <field name="list_price">100.0</field>
        <field name="sale_ok">True</field>        <!-- Enable for sales/eCommerce -->
        <field name="purchase_ok">False</field>        <!-- Optional: Disable purchases if not needed -->
        <!-- Add other fields as needed, e.g., <field name="taxes_id" eval="[(6, 0, [ref('account.tax_sale_15')])]"/> for taxes -->
    </record>

    <record id="appointment_type_vehicle_reservation" model="appointment.type">
        <field name="name">Vehicle Reservation</field>
        <field name="appointment_duration">1.0</field>        <!-- Duration in hours; adjust as needed -->        <!-- Enable up-front payment -->
        <field name="product_id" ref="nexus_odoo_car_dealer.reservation_product_xmlid"/>
        <!-- Assign to a user (e.g., Admin) for scheduling -->
        <field name="staff_user_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
 
        <!-- Link to the new "Vehicle Reservation" service product -->
        <!-- Add other fields as needed, e.g., <field name="website_published">True</field> to publish automatically -->
    </record>
</odoo>